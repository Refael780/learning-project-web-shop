<% include partials/header%>

<div class="container" style="margin-top: 70px">
  <h1
    style="text-align:center; font-family:'Amatic SC', cursive; font-size: 10em; "
  >
    חנות כלבו-סטוק
  </h1>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div
        style="width:80%; margin: auto;  max-height: 30rem; align-items: center; align-content: center ;
    box-sizing: border-box;
    box-shadow: -12px 6px 17px 8px black "
      >
        <div
          style="width: 100%; align-content: center; align-items: center ;margin:auto;
          "
          id="myCarousel"
          class="carousel slide"
          data-ride="carousel"
        >
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <div class="item active">
              <img
                src="<%= product[0].image[1]%>"
                alt="Los Angeles"
                style="width:100%; max-height: 30rem; align-content: center;"
              />
            </div>

            <div class="item">
              <img
                src="<%= product[1].image[1]%>"
                alt="Chicago"
                style="width:100%; max-height: 30rem; align-content: center;"
              />
            </div>

            <div class="item">
              <img
                src="<%= product[2].image[0]%>"
                alt="New york"
                style="width:100%;max-height: 30rem; align-content: center;"
              />
            </div>
          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a
            class="right carousel-control"
            href="#myCarousel"
            data-slide="next"
          >
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container" style="margin-top: 70px">
  <div
    class="row text-center"
    style="display: flex; flex-wrap:wrap; max-height: 180px"
  >
    <% product.forEach(function(element){ %>
    <div class="col-md-3 col-sm-6">
      <div class="ui link cards">
        <div style="margin: 30px 10px" class="card">
          <div class="image">
            <img style="height: 160px" src="<%= element.image[0]%>" />
          </div>
          <div class="content">
            <div class="header"><%= element.name %></div>
            <div class="meta">
              <p><%= element.price %></p>
            </div>
            <div class="description">
              <p><%= element.description.substring(0, 37)%> ...</p>
            </div>
          </div>
          <div class="extra content">
            <a
              style=" display: block;  width: 100%;"
              class="btn btn-primary btn-lg"
              href="/products/<%=element._id%>"
            >
              למידע נוסף</a
            >
          </div>
        </div>
      </div>
    </div>

    <%})%>
  </div>
</div>

<% include partials/footer%>
